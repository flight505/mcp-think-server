{
  "name": "mcp-think-server",
  "version": "1.0.5",
  "description": "An MCP server that provides a 'think' tool for structured reasoning in AI assistants",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "mcp-think-server": "bin/mcp-think-server.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "node --loader ts-node/esm src/server.ts",
    "inspect": "npx fastmcp inspect src/server.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "ai",
    "claude",
    "think-tool",
    "reasoning",
    "structured-thinking",
    "cursor",
    "anthropic"
  ],
  "author": "flight505",
  "license": "MIT",
  "homepage": "https://github.com/flight505/mcp-think-server",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flight505/mcp-think-server.git"
  },
  "bugs": {
    "url": "https://github.com/flight505/mcp-think-server/issues"
  },
  "dependencies": {
    "@types/node": "^22.13.17",
    "fastmcp": "^1.21.0",
    "minimist": "^1.2.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "src",
    "Readme.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
