{
  "name": "mcp-think-tank",
  "version": "1.3.6",
  "description": "An MCP server that provides reasoning and knowledge graph capabilities for AI assistants",
  "type": "module",
  "main": "dist/bootstrap.mjs",
  "bin": {
    "mcp-think-tank": "bin/mcp-think-tank.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/bootstrap.mjs",
    "dev": "node --loader ts-node/esm src/bootstrap.mjs",
    "inspect": "npx fastmcp inspect dist/bootstrap.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "prepack": "npm run build"
  },
  "keywords": [
    "mcp",
    "ai",
    "claude",
    "think-tool",
    "reasoning",
    "structured-thinking",
    "cursor",
    "anthropic",
    "knowledge-graph",
    "memory"
  ],
  "author": "flight505",
  "license": "MIT",
  "homepage": "https://github.com/flight505/mcp-think-tank",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flight505/mcp-think-tank.git"
  },
  "bugs": {
    "url": "https://github.com/flight505/mcp-think-tank/issues"
  },
  "dependencies": {
    "@types/node": "^22.13.17",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.5.0",
    "exa-js": "^1.6.13",
    "fastmcp": "1.22.4",
    "minimist": "^1.2.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/minimist": "^1.2.5",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "nodemon": "^3.1.9",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "src",
    "Readme.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "fastmcp": ">=1.22.0"
  }
}
